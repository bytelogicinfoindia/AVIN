<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".allactivity.EditProfileActivity">

    <include
        android:id="@+id/header"
        layout="@layout/headertools"></include>
<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/header"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_20"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="Full Name*"
                android:layout_height="wrap_content" />


            <EditText

                android:singleLine="true"
                android:padding="@dimen/margin_10"
                android:id="@+id/tv_votefirstname"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/buttonstyle2"
                android:layout_width="match_parent"
                android:inputType="textPostalAddress"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray"
                android:hint="" />

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="Email*"
                android:layout_height="wrap_content" />


            <EditText

                android:singleLine="true"
                android:padding="@dimen/margin_10"
                android:id="@+id/tv_emails"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/buttonstyle2"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray"
                android:hint="" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="Phone Number*"
                android:layout_height="wrap_content" />


            <EditText

                android:singleLine="true"
                android:padding="@dimen/margin_10"
                android:id="@+id/tv_phone"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/buttonstyle2"
                android:layout_width="match_parent"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray"
                android:hint="" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="Address*"
                android:layout_height="wrap_content" />


            <EditText

                android:singleLine="true"
                android:padding="@dimen/margin_10"
                android:id="@+id/tv_address"
                android:imeOptions="actionDone"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/buttonstyle2"
                android:layout_width="match_parent"
                android:inputType="textPostalAddress"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray"
                android:hint="" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:text="Zipcode*"
                android:layout_height="wrap_content" />


            <EditText

                android:singleLine="true"
                android:padding="@dimen/margin_10"
                android:id="@+id/tv_zipcode"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/buttonstyle2"
                android:layout_width="match_parent"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray"
                android:hint="" />

        </LinearLayout>




        <custom.RainbowTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:padding="10dp"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:textColor="@color/colorWhite"
            android:background="@drawable/buttonstyle3"
            android:gravity="center"
            android:id="@+id/bt_save"
            android:layout_marginRight="@dimen/margin_60"
            android:layout_marginLeft="@dimen/margin_60"
            android:textAllCaps="false"
            android:text="Save" />




    </LinearLayout>







</ScrollView>






</RelativeLayout>
