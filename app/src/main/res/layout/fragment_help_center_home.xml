<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HelpCenterHome">

    <include
        android:id="@+id/header"
        layout="@layout/headertools"></include>

    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_20"
                android:padding="@dimen/margin_10"
                android:visibility="gone"
                android:textSize="@dimen/margin_20"
                android:textColor="@color/black"
                android:text="We Would like to have following details from you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="gone"
                android:background="@color/placeholder_bg"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/re_aacountseting"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:text="Account Setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/placeholder_bg"
                android:layout_height="1dp"/>


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/re_changepassword"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:text="Change Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"

                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/placeholder_bg"
                android:layout_height="1dp"/>


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/re_termsuse"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:text="Terms of Use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="gone"
                android:background="@color/placeholder_bg"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/re_privacypolicy"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:text="Privacy Policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="gone"
                android:background="@color/placeholder_bg"
                android:layout_height="1dp"/>


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/re_contactUs"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:text="Contact Us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/placeholder_bg"
                android:layout_height="1dp"/>



            <RelativeLayout

                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                  android:id="@+id/bt_sharingApp"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:text="Share App"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/placeholder_bg"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/re_download"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:text="RateApp On PlayStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_20"
                android:background="@color/placeholder_bg"
                android:layout_height="1dp"/>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>