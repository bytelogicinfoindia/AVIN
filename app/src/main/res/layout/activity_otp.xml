<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".allactivity.OtpActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_20"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/margin_20"
                android:text="Verification Code"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_20"
                android:id="@+id/tv_number"
                android:text=""
                android:textColor="@color/gray3"
                android:layout_height="wrap_content" />



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:textColorHint="@color/gray3"
            app:errorEnabled="true"
            android:id="@+id/et_hintsotp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:gravity="left"
                android:maxLength="8"
                android:textSize="@dimen/margin_15"
                android:id="@+id/et_otpnumber"
                android:inputType="number"
                android:hint="Otp Number"/>

        </android.support.design.widget.TextInputLayout>

        <custom.RainbowTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:padding="10dp"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_60"
            android:layout_marginLeft="@dimen/margin_60"
            android:textSize="20dp"
            android:id="@+id/bt_otpVerify"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle3"
            android:textColor="@color/colorWhite"
            android:text="Otp Verify"/>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>