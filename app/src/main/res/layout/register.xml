<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".allactivity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_black_24dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#ff0000"/>

                <ImageButton
                    android:id="@+id/add_image_profile"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_camera_enhance_black_24dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/round_button"
                    android:layout_height="30dp" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:layout_width="match_parent"
                android:textColorHint="@color/gray3"
                android:id="@+id/et_namehits"
                app:errorEnabled="true"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_20">


                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                    android:gravity="left"
                    android:textSize="@dimen/margin_15"
                    android:inputType="text"
                    android:hint="Name"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/tv_hintsemails"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:textColorHint="@color/gray3"
                app:errorEnabled="true"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:gravity="left"
                    android:textSize="@dimen/margin_15"
                    android:id="@+id/et_emailregister"
                    android:inputType="textEmailAddress"
                    android:hint="Email"/>



            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:textColorHint="@color/gray3"
                app:errorEnabled="true"
                android:id="@+id/et_hintsphone"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:gravity="left"
                    android:textSize="@dimen/margin_15"
                    android:id="@+id/et_mobile"
                    android:inputType="number"
                    android:hint="Mobile Number"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/et_hintsaddress"
                android:textColorHint="@color/gray3"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:gravity="left"
                    android:hint="Full Address"
                    android:inputType="text"
                    android:id="@+id/et_address"
                    android:padding="10dp"
                    android:textSize="15dp"
                     />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/et_zipcdehints"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:textColorHint="@color/gray3"
                app:errorEnabled="true"

                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:gravity="left"
                    android:textSize="@dimen/margin_15"
                    android:inputType="number"
                    android:id="@+id/et_zipcode"
                    android:hint="ZipCode"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/et_passwordhints"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:textColorHint="@color/gray3"
                app:errorEnabled="true"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:drawableLeft="@drawable/ic_https_black_24dp"
                    android:gravity="left|center"
                    android:textSize="@dimen/margin_15"
                    android:id="@+id/et_Pass"
                    android:textStyle="bold"
                    android:inputType="textPassword"
                    android:hint="Password"/>

            </android.support.design.widget.TextInputLayout>

            <custom.RainbowTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45"
                android:padding="10dp"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_60"
                android:layout_marginLeft="@dimen/margin_60"
                android:textSize="20dp"
                android:id="@+id/bt_Register"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyle3"
                android:textColor="@color/colorWhite"
                android:text="Register"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/bt_forgotpass"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="Forgot Password?"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:gravity="center"
                android:id="@+id/tv_register"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_20"
                android:textStyle="bold"
                android:text="Already Registered Login Here"/>





        </LinearLayout>

    </ScrollView>


</RelativeLayout>