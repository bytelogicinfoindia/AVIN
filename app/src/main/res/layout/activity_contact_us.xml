<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".allactivity.ContactUsActivity">


    <include
        android:id="@+id/header"
        layout="@layout/headertools"/>


    <ScrollView
        android:isScrollContainer="false"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/margin_15"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="@dimen/margin_20"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_height="wrap_content"
                    android:text="Contact Us  " />





                <TextView
                    android:autoLink="email"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_20"
                    android:textColor="#1E90FF"
                    android:id="@+id/tv_emails"
                    android:drawablePadding="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:layout_height="wrap_content"
                    android:text="avinservices1@gmail.com" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_height="wrap_content">



                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_height="wrap_content"
                    android:text="Please call us at:  " />

                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/margin_5"
                    android:id="@+id/tv_contact"
                    android:autoLink="phone"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_height="wrap_content"
                    android:text=" +91-6901110908" />

                <TextView
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:text="ADD :  Milan Nagar, Dibrugarh, Assam 786003" />




            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>