<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_10"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_weight=".2"
                android:id="@+id/viewliner"
                android:gravity="center|left"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtview_servicename"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:text="Service name - Mobile"
                    android:layout_gravity="left"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_15"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Oder no - #637389918"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:id="@+id/tv_creatorder"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textSize="@dimen/margin_15"
                    android:gravity="left|center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:id="@+id/tv_status"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textSize="@dimen/margin_15"
                    android:gravity="left|center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Pay Mode - Online"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:id="@+id/tv_date"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textSize="@dimen/margin_15"
                    android:gravity="left|center"
                    android:layout_height="wrap_content" />





            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:layout_gravity="right|center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:id="@+id/bt_cancel"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:layout_height="24dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="right"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:text="Cancel"

                android:background="@drawable/buttonstyle3"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/margin_10"
                android:gravity="center"
                android:layout_height="30dp" />
        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>